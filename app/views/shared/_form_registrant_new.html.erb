<div class="container-fluid">

  <div class="row"> 

    <div class="col-md-12 talk-to-us">

      <h4 class="col-md-offset-1">Tell us about your health care needs <small id="required-fields"> All fields required</small></h4>

      <form class="form-inline col-md-offset-1">

        <%= form_for @registrant, html: { class: "form", :multipart => true } do |f| %>

            <%= f.text_field :name, { class: "form-control input-box" ,:placeholder => "First & last name" } %>
            <%= f.text_field :email, { class: "form-control input-box" ,:placeholder => "Email address" } %>
            <%= f.text_field :company, { class: "form-control input-box" ,:placeholder => "Company" } %>
            <h7> I am interested in <strong>Autonome</strong> <%= f.collection_select(:registrant_type, RegistrantType.all, :id, :name ) %></h7>
            <%= f.submit "Talk to us", { :class => 'btn btn-primary submit-button' } %>

        <% end %>

      </form>

    </div>

  </div>

</div>